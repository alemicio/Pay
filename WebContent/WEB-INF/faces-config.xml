<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	
	<navigation-rule>
		<from-view-id>/xhtml/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{login.performLogin}</from-action>
			<from-outcome>SalariedEmployee</from-outcome>
			<to-view-id>/xhtml/employeepages/salariedFace.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{login.performLogin}</from-action>
			<from-outcome>CommissionedEmployee</from-outcome>
			<to-view-id>/xhtml/employeepages/commissionedFace.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{login.performLogin}</from-action>
			<from-outcome>ContractorEmployee</from-outcome>
			<to-view-id>/xhtml/employeepages/contractorFace.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{login.performLogin}</from-action>
			<from-outcome>EmployeeManager</from-outcome>
			<to-view-id>/xhtml/employeepages/managerFace.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/xhtml/employeepages/salariedFace.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{login.performLogout}</from-action>
			<from-outcome>Logout</from-outcome>
			<to-view-id>/xhtml/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>	
	
	<navigation-rule>
		<from-view-id>/xhtml/employeepages/managerFace.xhtml</from-view-id>
		
		<navigation-case>
			<from-action>#{login.performLogout}</from-action>
			<from-outcome>Logout</from-outcome>
			<to-view-id>/xhtml/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-action>#{manager.addSalariedEmployee()}</from-action>
			<to-view-id>/xhtml/employeepages/managerFace.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-action>#{manager.addCommissionedEmployee()}</from-action>
			<to-view-id>/xhtml/employeepages/managerFace.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-action>#{manager.addContractorEmployee()}</from-action>
			<to-view-id>/xhtml/employeepages/managerFace.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>	
	
	<navigation-rule>
		<from-view-id>/xhtml/employeepages/contractorFace.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{login.performLogout}</from-action>
			<from-outcome>Logout</from-outcome>
			<to-view-id>/xhtml/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>	
	
	<navigation-rule>
		<from-view-id>/xhtml/employeepages/commissionedFace.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{login.performLogout}</from-action>
			<from-outcome>Logout</from-outcome>
			<to-view-id>/xhtml/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>	

</faces-config>
